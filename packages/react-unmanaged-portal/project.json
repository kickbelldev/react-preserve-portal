{
  "name": "@charley-kim/react-preserve-portal",
  "sourceRoot": "packages/react-preserve-portal/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/react-preserve-portal/dist"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/src/**/*.{ts,tsx}"],
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "config": "{projectRoot}/vitest.config.ts",
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
      }
    }
  },
  "release": {
    "version": {
      "generator": "@nx/js:release-version",
      "options": {}
    },
    "changelog": {
      "generator": "@nx/js:release-changelog",
      "options": {}
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "manifestRootsToUpdate": ["packages/react-preserve-portal"],
        "buildTarget": "@charley-kim/react-preserve-portal:build"
      }
    }
  }
}
